{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/bot",
  "sourceRoot": "apps/bot/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "tsConfigPath": "apps/bot/tsconfig.build.json"
  },
  "projects": {
    "bot": {
      "type": "application",
      "root": "apps/bot",
      "sourceRoot": "apps/bot/src",
      "compilerOptions": {
        "deleteOutDir": true,
        "tsConfigPath": "apps/bot/tsconfig.build.json"
      }
    }
  }
}
