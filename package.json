{
  "name": "@mi-zon/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "mi-zon Backend Monorepo",
  "scripts": {
    "start": "nest start",
    "start:dev": "pnpm start --watch",
    "start:debug": "pnpm start:dev --debug",
    "lint": "nx run-many --target=lint",
    "lint:fix": "pnpm -r lint:fix",
    "build": "nx run-many --target=build",
    "test": "nx run-many --target=test",
    "test:coverage": "pnpm test -- -- --coverage",
    "doc": "typedoc",
    "env:copy": "pnpm -r env:copy",
    "migrate": "pnpm -r migrate",
    "migrate:rollback": "pnpm -r migrate:rollback",
    "migrate:rollback:all": "pnpm -r migrate:rollback:all",
    "migrate:fresh": "pnpm -r migrate:fresh",
    "prepare": "is-ci || husky install",
    "docker:up": "docker-compose up -d --build --remove-orphans",
    "docker:down": "docker-compose down",
    "ci:coverage-report": "tsx scripts/ci-coverage-report.mts"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">= 20.13.1",
    "pnpm": ">= 9.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "17.6.3",
    "@commitlint/config-conventional": "17.6.3",
    "@compodoc/compodoc": "1.1.19",
    "@faker-js/faker": "7.6.0",
    "@jest/types": "29.6.3",
    "@nestjs/cli": "9.4.2",
    "@nestjs/schematics": "9.1.0",
    "@nx/eslint": "19.0.5",
    "@nx/jest": "19.0.5",
    "@swc/core": "1.5.7",
    "@swc/jest": "0.2.36",
    "@testcontainers/postgresql": "10.9.0",
    "@types/cookie-parser": "1.4.3",
    "@types/cron": "2.0.1",
    "@types/express": "4.17.17",
    "@types/ip": "1.1.3",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.2",
    "@types/lodash": "4.14.194",
    "@types/mime-types": "2.1.1",
    "@types/morgan": "1.9.4",
    "@types/ms": "0.7.31",
    "@types/multer": "1.4.7",
    "@types/node": "20.12.12",
    "@types/nodemailer": "6.4.7",
    "@types/passport-jwt": "3.0.8",
    "@types/puppeteer": "7.0.4",
    "@types/supertest": "6.0.2",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "7.10.0",
    "@typescript-eslint/parser": "7.10.0",
    "cobertura-merge": "1.0.4",
    "commander": "12.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "junit-report-merger": "7.0.0",
    "ngrok": "5.0.0-beta.2",
    "nx": "19.0.5",
    "nx-cloud": "19.0.0",
    "prettier": "3.2.5",
    "redis-memory-server": "0.10.0",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "testcontainers": "10.9.0",
    "tsx": "4.10.5",
    "typedoc": "0.25.13",
    "typescript": "5.4.5"
  }
}
